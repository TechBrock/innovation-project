<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:background="#34495E"
	android:orientation="vertical"
	android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin">
	
    <LinearLayout
	    android:layout_width="wrap_content"
	    android:layout_height="match_parent"
	    android:orientation="vertical" >
	
		<LinearLayout
		    android:layout_width="wrap_content"
		    android:layout_height="match_parent"
		    android:orientation="horizontal" >
		    
		    <LinearLayout
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:layout_weight="1"
		        android:gravity="center_vertical"
		        android:orientation="vertical" >
		    	
		        <LinearLayout 
				    android:layout_width="match_parent"
				    android:layout_height="match_parent"
			    	android:orientation="horizontal">
			    	
		            <LinearLayout
		                android:layout_width="wrap_content"
		                android:layout_height="wrap_content"
		                android:layout_gravity="left"
		                android:layout_weight="1"
		                android:gravity="left"
		                android:orientation="horizontal" >
			    	
			            <ImageView
			                android:id="@+id/btPopBike"
			                android:layout_width="wrap_content"
			                android:layout_height="wrap_content"
			                android:src="@drawable/bike"
			                android:onClick="callImg" />
		            
		            </LinearLayout>
		            
		            <LinearLayout
		                android:layout_width="wrap_content"
		                android:layout_height="wrap_content"
		                android:layout_gravity="right"
		                android:layout_weight="2"
		                android:gravity="left"
		                android:orientation="horizontal" >
			            
				        <ImageView
				            android:id="@+id/btPopBikeFavorito"
				            android:layout_width="wrap_content"
				            android:layout_height="wrap_content"
				            android:onClick="tornaBikeFavorita"
				            android:src="@drawable/logoestrela" />
				        
				   </LinearLayout>
			    	
		        </LinearLayout>
		    	
		        
		        
		    </LinearLayout>
		    
		    <ImageView
		        android:id="@+id/btSairPopBike"
		        android:layout_width="match_parent"
		        android:layout_height="wrap_content"
		        android:layout_weight="1"
		        android:onClick="killBike"
		        android:src="@drawable/btnsair" />
		
		</LinearLayout>
		
		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:orientation="horizontal" 
			android:layout_gravity="center"
			android:background="#FFFFFF">
					    
			<TextView
				android:id="@+id/lblNomeBike"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="Nome Bike"
				android:textColor="#34495E"
				android:textStyle="bold" 
				android:layout_gravity="center"/>
					    
		</LinearLayout>
		
		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:orientation="horizontal" >
			    
			<TextView
				android:id="@+id/lblClassificacao"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="Classificação:   "
				android:textColor="#FFFFFF"
				android:textStyle="bold" />
			    
			<TextView
				android:id="@+id/vClassificacao"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text=""
				android:textColor="#FFFFFF" />
		</LinearLayout>
		
		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:orientation="horizontal" >
			    
			<TextView
				android:id="@+id/lblTipo"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="Tipo:   "
				android:textColor="#FFFFFF"
				android:textStyle="bold" />
			    
			<TextView
				android:id="@+id/vTipo"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text=""
				android:textColor="#FFFFFF" />
		</LinearLayout>
					
		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:orientation="horizontal" >
			
		    <TextView
				android:id="@+id/lblCaracteristica"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="Caracteristica:   "
				android:textColor="#FFFFFF"
				android:textStyle="bold" />
			    
			<TextView
				android:id="@+id/vCaracteristica"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text=""
				android:textColor="#FFFFFF" />
		</LinearLayout>
			
		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:orientation="horizontal" >
			    
			<TextView
				android:id="@+id/lblTamanho"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="Tamanho:   "
				android:textColor="#FFFFFF"
				android:textStyle="bold" />
			    
			<TextView
				android:id="@+id/vTamanho"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text=""
				android:textColor="#FFFFFF" />
			
		</LinearLayout>
			
		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:orientation="horizontal" >
			    
			<TextView
				android:id="@+id/lblDimensao"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="Dimensão:   "
				android:textColor="#FFFFFF"
				android:textStyle="bold" />
			    
			<TextView
				android:id="@+id/vDimensao"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text=""
				android:textColor="#FFFFFF" />
		</LinearLayout>    
		
		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:orientation="horizontal" >
			    
			<TextView
				android:id="@+id/lblPeso"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="Peso:   "
				android:textColor="#FFFFFF"
				android:textStyle="bold" />
			    
			<TextView
				android:id="@+id/vPeso"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text=""
				android:textColor="#FFFFFF" />
		</LinearLayout>  
		
		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:orientation="horizontal" >
			    
			<TextView
				android:id="@+id/lblAro"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="Aro:   "
				android:textColor="#FFFFFF"
				android:textStyle="bold" />
			    
			<TextView
				android:id="@+id/vAro"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text=""
				android:textColor="#FFFFFF" />
		</LinearLayout>  
		
		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:orientation="horizontal" >
			    
			<TextView
				android:id="@+id/lblAdicionais"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="Adicionais:   "
				android:textColor="#FFFFFF"
				android:textStyle="bold" />
			    
			<TextView
				android:id="@+id/vAdicionais"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text=""
				android:textColor="#FFFFFF" />
		</LinearLayout> 
		
		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:orientation="horizontal" >
			    
			<TextView
				android:id="@+id/lblMaterial"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="Material:   "
				android:textColor="#FFFFFF"
				android:textStyle="bold" />
			    
			<TextView
				android:id="@+id/vMaterial"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text=""
				android:textColor="#FFFFFF" />
		</LinearLayout>
		
		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:orientation="horizontal" >
			    
			<TextView
				android:id="@+id/lblGarantia"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="Garantia:   "
				android:textColor="#FFFFFF"
				android:textStyle="bold" />
			    
			<TextView
				android:id="@+id/vGarantia"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text=""
				android:textColor="#FFFFFF" />
		</LinearLayout>
		
	</LinearLayout>
	
</ScrollView>