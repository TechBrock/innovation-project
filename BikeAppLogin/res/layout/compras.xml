<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F25E65"
    android:gravity="center_vertical"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin">
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center|center_vertical"
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:orientation="vertical" >
        
        <LinearLayout
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:orientation="horizontal" >

            <Button
                android:id="@+id/button1Compra"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/logoperfil"
                android:onClick="callPerfil"/>

            <Button
                android:id="@+id/button2Compra"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/logobike"
                android:onClick="callOfertas"/>

            <Button
                android:id="@+id/button3Compra"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/logocarrinhoinvertido"
                android:onClick="callCompras"/>

            <Button
                android:id="@+id/button4Compra"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/logoestrela"
                android:onClick="callFavoritos"/>
            
            <Button
                android:id="@+id/buttonSairCompra"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Exit" 
                android:onClick="callLogin"/>
	    
	    </LinearLayout>
    </LinearLayout>
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center|center_vertical"
        android:layout_weight="20"
        android:gravity="top"
        android:orientation="vertical" >

    	<TextView
        	android:id="@+id/tituloCompra"
        	android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#FFFFFF" 
            android:text="Pedidos"
            android:textSize="20dp"
            android:gravity="center"/>
    	
    	<TextView
        	android:id="@+id/QtdCompra"
        	android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#FFFFFF" 
            android:text="Compras efetuadas !"
            android:gravity="left"/>

    	<ListView
    	    android:id="@+id/listaPedidos"
    	    android:layout_width="match_parent"
    	    android:layout_height="wrap_content" >
    	</ListView>

    </LinearLayout>
    

</LinearLayout>